<div id="puppetclasses_parameters">
  <% cached_facts = obj.facts_hash -%>
  <%= render :partial => "puppetclasses/class_parameters",
    :collection => obj.puppetclasses, :as => :klass,
    :locals => { :type => obj.class.to_s.downcase,
      :host => obj, :host_facts => cached_facts } %>
    <p></p>
  <%= render :partial => "puppetclasses/class_parameters",
    :collection => parent_classes(obj), :as => :klass,
    :locals => { :type => obj.class.to_s.downcase,
      :host => obj, :host_facts => cached_facts } %>
</div>
