<div class="fields">
  <div class="control-group <%= 'error' if f.object.errors.any? %>">
    <%= f.hidden_field :lookup_key_id, :'data-property' => 'lookup_key_id' %>
    <%= text_field_tag '', (f.object.lookup_key.puppetclass.name rescue ''), :class => 'span2', :'data-property' => 'class', :disabled => true, :title => 'Puppetclass' %>
    <%= text_field_tag '', (f.object.lookup_key.key rescue ''), :class => 'span2', :'data-property' => 'name', :disabled => true, :title => 'Parameter name' %>
    <%= f.text_area :value, :rows => 2, :class => 'span6', :'data-property' => 'value', :disabled => (not authorized_via_my_scope("host_editing", "edit_params")), :placeholder => "Value" %>
    <%= text_field_tag '', (f.object.lookup_key.validator_type rescue 'unknown'), :class => 'span1', :'data-property' => 'type', :disabled => true, :title => 'Parameter type' %></span>
    <span class="help-inline">
      <%= link_to_remove_fields("remove", f) %>
    </span>
    <span class="help-block">
      <%= f.object.errors.full_messages.to_sentence %>
    </span>
  </div>
</div>
